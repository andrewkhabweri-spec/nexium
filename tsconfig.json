{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,               
    "declaration": true,             
    "emitDeclarationOnly": true,
    "outDir": "types",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "CommonJS",
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["index.js"],
  "exclude": ["node_modules", "types"]
}
